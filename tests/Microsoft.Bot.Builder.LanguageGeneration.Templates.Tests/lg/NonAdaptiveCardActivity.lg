# HerocardWithCardAction(title, text)
[HeroCard
    Title = @{title}
    Text = @{text}
    Buttons = {cardActionTemplate(null, title, text)}
]

# cardActionTemplate(type, title, value)
[CardAction
    Type = {if(type == null, 'imBack', type)}
    Title = {title}
    Value = {value}
]

# eventActivity
[Activity
    Name = {text}
    Value = {text}
    Type = event
]
