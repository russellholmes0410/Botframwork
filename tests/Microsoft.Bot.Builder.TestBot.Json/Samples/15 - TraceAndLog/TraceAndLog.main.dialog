{
    "$schema": "../../app.schema",
    "$type": "Microsoft.AdaptiveDialog",
    "$id": "root",
    "triggers": [
        {
            "$type": "Microsoft.OnBeginDialog",
            "actions": [
                {
                    "$type": "Microsoft.TextInput",
                    "prompt": "Hello, what is your name?",
                    "property": "user.name"
                },
                {
                    "$type": "Microsoft.TraceActivity",
                    "valueType": "memory",
                    "value": "user"
                },
                {
                    "$type": "Microsoft.LogAction",
                    "text": "{user.name}"
                }
            ]
        }
    ]
}