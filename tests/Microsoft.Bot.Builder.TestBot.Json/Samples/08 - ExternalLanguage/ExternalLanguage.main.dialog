{
    "$schema": "../../app.schema",
    "$type": "Microsoft.AdaptiveDialog",
    "autoEndDialog": false,
    "generator": "ExternalLanguage.main.lg",
    "recognizer": {
        "$type": "Microsoft.RegexRecognizer",
        "intents": [
            {
                "$type": "Microsoft.IntentPattern",
                "intent": "HelpIntent",
                "pattern": "(?i)help" 
            },
            {

                "$type": "Microsoft.IntentPattern",
                "intent": "GreetingIntent",
                "pattern": "(?i)hi|hello|hiya|greetings" 
            },
            {

                "$type": "Microsoft.IntentPattern",
                "intent": "JokeIntent",
                "pattern": "(?i)joke" 
            },
            {

                "$type": "Microsoft.IntentPattern",
                "intent": "FortuneTellerIntent",
                "pattern": "(?i)fortune|future" 
            },
            {

                "$type": "Microsoft.IntentPattern",
                "intent": "CancelIntent",
                "pattern": "(?i)cancel"
            }
        ]
    },
    "triggers": [
        {
            "$type": "Microsoft.OnBeginDialog",
            "actions": [
                {
                    "$type": "Microsoft.SendActivity",
                    "activity": "[welcome]"
                },
                "ExternalLanguage.Greeting"
            ]
        },
        {
            "$type": "Microsoft.OnIntent",
            "intent": "JokeIntent",
            "actions": [
                "ExternalLanguage.TellJoke"
            ]
        },
        {
            "$type": "Microsoft.OnIntent",
            "intent": "FortuneTellerIntent",
            "actions": [
                "ExternalLanguage.FortuneTeller"
            ]
        },
        {
            "$type": "Microsoft.OnIntent",
            "intent": "GreetingIntent",
            "actions": [
                "ExternalLanguage.Greeting"
            ]
        },
        {
            "$type": "Microsoft.OnIntent",
            "intent": "HelpIntent",
            "actions": [
                {
                    "$type": "Microsoft.SendActivity",
                    "activity": "[help]"
                }
            ]
        },
        {
            "$type": "Microsoft.OnIntent",
            "intent": "CancelIntent",
            "actions": [
                {
                    "$type": "Microsoft.SendActivity",
                    "activity": "OK, see ya"
                },
                {
                    "$type": "Microsoft.EndDialog"
                }
            ]
        },
        {
            "$type": "Microsoft.OnUnknownIntent",
            "actions": [
                {
                    "$type": "Microsoft.SendActivity",
                    "activity": "[help]"
                }
            ]
        }
    ]
}